@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Conversion.Models.ViewModel


@{
    ViewBag.Title = "ConvertCF";
}
<h2>Conversion of Celsius and Fehrenheit</h2>

@using (Html.BeginForm("convertcf", "Home", FormMethod.Post))
{
    <div>
  
    </div>
    <div>
        @Html.LabelFor(x => x.Input, "Temp:")
        @Html.TextBoxFor(x => x.Input)
    </div>
    <div>
        @Html.LabelFor(x => x.Option, "Convert to ")
        @Html.DropDownListFor(x => x.Option, new List<SelectListItem>
{
new SelectListItem {Text = "Fahrenheit", Value = "1"},
new SelectListItem {Text = "Celsius", Value = "2"}
})
    </div>
    <div>
        <button type="submit">Convert It!</button>
    </div>
}
@if (Model.ShowResult)
{
    <p>@Model.OptionName : @Model.Input = @Model.Result</p>
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


